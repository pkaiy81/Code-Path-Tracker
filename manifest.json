{
    "manifest_version": 3,
    "name": "Code Path Tracker",
    "version": "1.0.0",
    "default_locale": "en",
    "description": "__MSG_description__",
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "scripting"
    ],
    "icons": {
        "16": "images/Code_Path_Tracker_Icon_16.png",
        "48": "images/Code_Path_Tracker_Icon_48.png",
        "128": "images/Code_Path_Tracker_Icon_128.png"
    },    
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "content_script.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}